<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

	<LinearLayout android:focusable="true" 
        android:focusableInTouchMode="true"
        android:layout_width="0px" 
        android:layout_height="0px"/>
    
    <ScrollView
        android:id="@+id/scrollViewTimerSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutBottom"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayoutTimerSetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayoutTimerDef"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvTimerDefTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="定时器设置" />

                <LinearLayout
	                android:id="@+id/LinearLayoutTimerName"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
                
	                <TextView
	                    android:id="@+id/tvTimerName"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5.0dip"
	                    android:textSize="18sp"
	                    android:text="名称" />
	                
	                <EditText
	                    android:id="@+id/editTextTimerNmae"
                        android:background="@drawable/edt_name_selector"
	                    android:hint="新提醒"
	                    android:textColor="@android:color/white"
	                    android:singleLine="true"
	                    android:layout_marginLeft="5.0dip"
	                    android:layout_marginRight="5.0dip"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content" >
	                </EditText>
				</LinearLayout>
				
                <LinearLayout
	                android:id="@+id/LinearLayoutTimerRemark"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
                
	                <TextView
	                    android:id="@+id/tvTimerRemark"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5.0dip"
	                    android:textSize="18sp"
	                    android:text="备注" />
	                
	                <EditText
	                    android:id="@+id/editTextRemark"
	                    android:singleLine="true"
	                    android:hint="备注"
                        android:background="@drawable/edt_name_selector"
                        android:textColor="@android:color/white"
	                    android:layout_marginLeft="5.0dip"
	                    android:layout_marginRight="5.0dip"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content" >
	                </EditText>
                
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutTimeSetting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvTimeSettingTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="启动时间" />

                <Button
                    android:id="@+id/btnStartTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="小时：分钟" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_marginBottom="5dip"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvLoopPolicyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="循环策略" />

                <Button
                    android:id="@+id/btnAddLoopPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/add"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <com.thorqq.magictimer.ListViewNoScroll
                android:id="@+id/ListViewNoScrollLoopPolicy"
                android:orientation="vertical" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.thorqq.magictimer.ListViewNoScroll>

            <RelativeLayout
                android:layout_marginBottom="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvTimingActionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="定时动作" />

                <Button
                    android:id="@+id/btnAddAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/add"/>
            </RelativeLayout>

            <com.thorqq.magictimer.ListViewNoScroll
                android:id="@+id/ListViewNoScrollAction"
                android:orientation="vertical" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.thorqq.magictimer.ListViewNoScroll>
                
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7.0"
            android:text="保存" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="2.0dip"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7.0"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>