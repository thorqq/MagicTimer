<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutTimeSettingName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   	android:background="@drawable/transparent_bg"
    android:orientation="vertical">

    <LinearLayout 
        android:id="@+id/RelativeLayoutTimeSettingNameUp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
    
	    <LinearLayout 
	        android:id="@+id/LinearLayoutTimeSettingName"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:background="@drawable/list_item_selector"
	        android:orientation="vertical">
	        
	        <TextView
	            android:id="@+id/tvName"
	            android:text="name"
	            android:textSize="16dip"
	            android:textColor="@android:color/white"
	            android:layout_marginLeft="8.0dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	
	    </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/RelativeLayoutTimeSettingNameDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayoutUp"
    	android:background="@drawable/timer_item_child_bg"
        android:visibility="gone"
        android:orientation="vertical">
	    
	    <RelativeLayout
	        android:id="@+id/RelativeLayoutDividerTimeSettingName"
	        android:layout_width="fill_parent"
	        android:layout_height="1.0dip"
	        android:background="@drawable/gradient_shape_hor"/>

    </LinearLayout>
    
</RelativeLayout>