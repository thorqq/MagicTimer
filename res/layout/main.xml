<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout 
	    android:id="@+id/LinearLayoutTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:background="@drawable/main_title_bg"
	    android:orientation="horizontal" >
	    
        <ImageView 
	        android:id="@+id/ivMainImage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />
        
	    <TextView
	        android:id="@+id/tvMainTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="10.0dip"
	        android:layout_toRightOf="@+id/ivMainImage"
        	android:textSize="18dip"
        	android:textColor="@drawable/white"
	        android:text="@string/defaultMainTitle" />

	</RelativeLayout>	
		
        
    <ScrollView
        android:id="@+id/scrollViewTimerItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" >
        
	    <com.thorqq.magictimer.ListViewNoScroll
	        android:id="@+id/ListViewTimerItem"
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        android:cacheColorHint="#00000000"/>
    </ScrollView>
</LinearLayout>