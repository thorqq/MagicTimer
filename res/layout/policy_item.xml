<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PolicyItemLayout"
   	android:background="@drawable/transparent_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:gravity="center_vertical"
        android:orientation="horizontal">
        
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:background="@drawable/list_item_bg"
	        android:orientation="vertical">
	        
       	    <Button
		        android:id="@+id/btnExcludeFlag"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:background="@drawable/include" />
		</LinearLayout>
			    <LinearLayout
	        android:layout_width="1.0dip"
	        android:layout_height="fill_parent"
	        android:background="@drawable/gradient_shape_ver"/>
	    
	    <LinearLayout 
	        android:id="@+id/LinearLayoutPolicyDetail"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:background="@drawable/list_item_selector"
	        android:orientation="vertical">
	        
	        <TextView
	            android:id="@+id/tvPolicyDetail"
	            android:text="name"
	            android:textSize="16dip"
	            android:textColor="@android:color/white"
	            android:layout_marginLeft="8.0dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	
	    </LinearLayout>
		    <LinearLayout
	        android:layout_width="1.0dip"
	        android:layout_height="fill_parent"
	        android:background="@drawable/gradient_shape_ver"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:background="@drawable/list_item_bg"
	        android:orientation="vertical">
    	    <Button
		        android:id="@+id/btnDeletePolicy"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dip"
		        android:layout_marginRight="5dip"
		        android:background="@drawable/delete"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true" />
    	</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RelativeLayoutDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayoutUp"
    	android:background="@drawable/timer_item_child_bg"
        android:visibility="gone"
        android:orientation="vertical">
	    
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="1.0dip"
	        android:background="@drawable/gradient_shape_hor"/>

    </LinearLayout>
    
</LinearLayout>