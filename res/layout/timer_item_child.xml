<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TimerItemLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="5.0dip"
    android:paddingBottom="5.0dip"
    android:paddingRight="5.0dip"
    android:orientation="horizontal">

	    	    
    <ImageView
        android:id="@+id/ImageViewTest"
        android:src="@drawable/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3.0dip"
        android:layout_toLeftOf="@+id/TimerItemMoreTest"/>
    
    <TextView
        android:id="@+id/TimerItemMoreTest"
        android:textSize="16dip"
        android:text="测试"
        android:textColor="@drawable/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:layout_toLeftOf="@+id/ImageViewDelete"/>
        
    <ImageView
        android:id="@+id/ImageViewDelete"
        android:src="@drawable/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3.0dip"
        android:layout_toLeftOf="@+id/TimerItemMoreDelete"/>
    
    <TextView
        android:id="@+id/TimerItemMoreDelete"
        android:textSize="16dip"
        android:text="删除"
        android:textColor="@drawable/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    
</RelativeLayout>